<%= render 'posts/user_info' %>

<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.email %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <% if current_user.email==post.email or current_user.admin? %>
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
</table>

<%= link_to "New Post", new_post_path %>
<%= link_to "Home", '/home' %>