<div class="new_post">
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="errorExplanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="new_post-inner">
      <p>
        <%= f.label :email %>
        <%= f.text_field :email, :vaule => current_user.email %>
      </p>
      <p>
        <%= f.label :category %>
        <%= f.select :category, [['Interviews'],['Album reviews'],['Gear & equipment'], ['Other']] %>
      <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </p>
     
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
    </div>
  <% end %>
  <div class='pull-right'>
    <%= link_to "Back", '/posts' %>
    <%= link_to "Home", '/home' %>
  </div>
</div>