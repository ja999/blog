<div class="user_acc">
  Signed is as: <%= current_user.email %> | <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
</div><br>

<p>
	<strong> By: </strong>
	<%= @post.email %>
</p>

<p>
	<strong> Title: </strong>
	<%= @post.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @post.text %>
</p>
<div id="comment_header">
	<h2> Comments </h2>
	<p>
		Number of comments: 
		<%= @post.comments.count %>
	</p>
</div>
<div class="comment">
	<%= render @post.comments %>
</div>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to "Back", posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>