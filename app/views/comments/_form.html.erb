<div id='new_comment'>
	<div id='new_comment-inner'>
		<%= form_for([@post, @post.comments.build]) do |f| %>
			<p>
				<%= f.label :commenter %><br>
				<%= f.text_field :commenter, :value => current_user.email%>
			</p>
			<p>
				<%= f.label :body %><br>
				<%= f.text_area :body, size: '50x10' %>
			</p>
			<p>
				<%= f.submit %>
			</p>
		<% end %>
	</div>
</div>